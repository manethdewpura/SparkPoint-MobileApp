<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_blue">

    <!-- Top App Bar -->
    <include
        android:id="@+id/topAppBarContainer"
        layout="@layout/top_app_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

    <!-- Button group for date filters with status filter button on the right -->
    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/btnGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_toStartOf="@+id/btnFilterStatus"
        android:layout_alignParentStart="true"
        app:checkedButton="@id/btnCurrent"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCurrent"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/list_default_title"
            android:textStyle="bold"
            android:textColor="@drawable/btn_toggle_text"
            app:strokeColor="@color/dark_blue"
            app:checkedIcon="@android:drawable/ic_menu_today"
            app:backgroundTint="@drawable/btn_toggle_bg"
            app:checkedIconTint="@android:color/white"
            app:iconTint="@color/dark_blue"
            app:iconPadding="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpcoming"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/upcoming_bookings"
            android:textStyle="bold"
            android:textColor="@drawable/btn_toggle_text"
            app:strokeColor="@color/dark_blue"
            app:checkedIcon="@android:drawable/ic_menu_my_calendar"
            app:backgroundTint="@drawable/btn_toggle_bg"
            app:checkedIconTint="@android:color/white"
            app:iconTint="@color/dark_blue"
            app:iconPadding="4dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPast"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/past_charging_history"
            android:textStyle="bold"
            android:textColor="@drawable/btn_toggle_text"
            app:strokeColor="@color/dark_blue"
            app:checkedIcon="@android:drawable/ic_menu_recent_history"
            app:backgroundTint="@drawable/btn_toggle_bg"
            app:checkedIconTint="@android:color/white"
            app:iconTint="@color/dark_blue"
            app:iconPadding="4dp"/>
    </com.google.android.material.button.MaterialButtonToggleGroup>

        <!-- Status filter button -->
        <ImageButton
            android:id="@+id/btnFilterStatus"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/btnGroup"
            android:layout_marginStart="8dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Filter by status"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/search"/>

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerReservations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnGroup"
        android:layout_marginTop="8dp"
        android:padding="10dp"
        android:clipToPadding="false"
        android:elevation="2dp" />

    
    </RelativeLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />

</LinearLayout>
