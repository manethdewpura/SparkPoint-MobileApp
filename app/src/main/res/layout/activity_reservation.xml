<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/tvFormTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_reservation_title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:paddingBottom="16dp"/>

        <!-- Station Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/station_name"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/spinnerStations"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp" />

        <!-- Date Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_date"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/booking_date"
            android:focusable="false"
            android:clickable="true"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginTop="4dp"/>

        <!-- Time Slot Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_slot"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>

        <Spinner
            android:id="@+id/spinnerSlots"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="4dp" />

        <!-- Number of Slots -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_slotNo"
            android:textStyle="bold"
            android:layout_marginTop="12dp"/>
        <EditText
            android:id="@+id/etNumSlots"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="@string/slotNo_hint"
            android:background="@android:drawable/edit_text"
            android:padding="10dp"
            android:layout_marginTop="4dp"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

<!--            <Button-->
<!--                android:id="@+id/btnCancel"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Cancel"/>-->

            <Button
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
