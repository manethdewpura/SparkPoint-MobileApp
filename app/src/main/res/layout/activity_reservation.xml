<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/dark_blue">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Title -->
        <TextView
            android:id="@+id/tvFormTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_reservation_title"
            android:textStyle="bold"
            android:textSize="22sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingBottom="20dp" />

        <!-- Station Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/station_name"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"/>

        <Spinner
            android:id="@+id/spinnerStations"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/spinner_background"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="6dp" />

        <!-- Date Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_date"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etDate"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="@string/booking_date"
            android:focusable="false"
            android:clickable="true"
            android:background="@drawable/edittext_selector"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:layout_marginTop="6dp"/>

        <!-- Time Slot Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_slot"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"/>

        <Spinner
            android:id="@+id/spinnerSlots"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/spinner_background"
            android:paddingHorizontal="12dp"
            android:layout_marginTop="6dp" />

        <!-- Number of Slots -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/booking_slotNo"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etNumSlots"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="number"
            android:hint="@string/slotNo_hint"
            android:background="@drawable/edittext_selector"
            android:paddingHorizontal="12dp"
            android:textSize="14sp"
            android:layout_marginTop="6dp"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/confirm"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:paddingHorizontal="24dp"
                android:elevation="4dp"
                app:cornerRadius="12dp"
                app:strokeColor="@color/light_blue"
                android:backgroundTint="@color/light_blue"
                android:textColor="@color/white"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
