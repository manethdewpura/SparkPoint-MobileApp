<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#051238"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booking Details"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#0191fe"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tvBookingId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Booking ID: "
            android:textColor="#FFFFFF"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tvOwnerNIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Owner NIC: "
            android:textColor="#FFFFFF"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tvStationName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Station: "
            android:textColor="#FFFFFF"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tvTimeSlot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time Slot: "
            android:textColor="#FFFFFF"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: "
            android:textColor="#ff7600"
            android:textStyle="bold"
            android:padding="4dp"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Session (In Progress)"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0191fe"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark Completed"
            android:textColor="#FFFFFF"
            android:backgroundTint="#ff7600"/>
    </LinearLayout>
</ScrollView>
