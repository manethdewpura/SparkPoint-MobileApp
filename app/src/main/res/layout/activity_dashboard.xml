<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue">

    <!-- Top Section with Counts -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_blue"
        android:elevation="4dp">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <TextView
                android:id="@+id/tvPendingCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/pending_count"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@android:color/white">

            <TextView
                android:id="@+id/tvConfirmedCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:text="@string/confirmed_count"
                android:textColor="@color/orange"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <!-- Map -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_below="@id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:layout_above="@id/btnReservationList"
        android:clipToOutline="true"
        android:background="@android:color/white"/>

    <!-- Floating Action Button styled -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnReservationList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_bookings"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        app:cornerRadius="50dp"
        app:backgroundTint="@color/orange"/>

</RelativeLayout>
